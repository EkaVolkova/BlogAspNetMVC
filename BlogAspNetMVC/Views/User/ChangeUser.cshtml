@model BlogAspNetMVC.BusinessLogic.Requests.UserRequests.ChangeUserRequest

@{
    ViewData["Title"] = "Изменение пользователя";
}

<h2>Изменение пользователя</h2>

<form asp-action="ChangeUser" method="post" class="form-horizontal w-50">

    <div class="form-group">
        <label asp-for="NewName" class="control-label col-md-2"></label>
        <div class="col-md-10">
            <input asp-for="NewName" class="form-control" placeholder="Новое имя пользователя" />
            <span asp-validation-for="NewName" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="NewPassword" class="control-label col-md-2"></label>
        <div class="col-md-10">
            <input asp-for="NewPassword" type="password" class="form-control" placeholder="Новый пароль" />
            <span asp-validation-for="NewPassword" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="NewEmail" class="control-label col-md-2"></label>
        <div class="col-md-10">
            <input asp-for="NewEmail" type="email" class="form-control" placeholder="Новый Email" />
            <span asp-validation-for="NewEmail" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <button type="submit" class="btn btn-primary">Изменить</button>
        </div>
    </div>
</form>