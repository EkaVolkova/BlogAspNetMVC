@model BlogAspNetMVC.BusinessLogic.Requests.UserRequests.ChangePasswordRequest

<h2>Обновление данных</h2>

@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger">
        <strong>Ошибка!</strong> Некорректное имя пользователя или пароль.
    </div>
}
<form asp-action="ChangePassword" method="post" class="form-horizontal w-50" >
    <div>
        <label asp-for="OldPassword">Старый пароль</label>
        <input asp-for="OldPassword" type="password" class="form-control w-50" />
        <span asp-validation-for="OldPassword" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="NewPassword">Новый пароль</label>
        <input asp-for="NewPassword" type="password" class="form-control w-50" />
        <span asp-validation-for="NewPassword" class="text-danger"></span>
    </div>
    <button class="btn btn-primary mt-2" id="submitBtn">Войти</button>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}