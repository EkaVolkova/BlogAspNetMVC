@model BlogAspNetMVC.BusinessLogic.Requests.ArticleRequests.AddNewArticleRequest

<h2>Добавление статьи</h2>

@if (!ViewData.ModelState.IsValid)
{
<div class="alert alert-danger">
    <strong>Ошибка!</strong> Пожалуйста, исправьте ошибки в форме.
</div>
}

<form asp-action="CreateNewArticle" method="post">

    <div class="form-group">
        <label asp-for="Name">Название статьи</label>
        <input asp-for="Name" class="form-control w-50" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Text">Текст статьи</label>
        <textarea asp-for="Text" class="form-control w-50"></textarea>
        <span asp-validation-for="Text" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Теги</label>
        <div id="tagContainer">
            <input type="text" class="form-control" placeholder="Введите тег" />
            <button type="button" id="addTagButton" class="btn btn-secondary">Добавить тег</button>
        </div>
        <input type="hidden" asp-for="Tags" /> <!-- Это поле будет обновляться с помощью JavaScript -->
        <span asp-validation-for="Tags" class="text-danger"></span>
    </div>

    <button class="btn btn-primary mt-2" type="submit">Добавить</button>
</form>
<a href="/Article/GetAllArticles" class="mt-2 d-block">Перейти к списку всех статей</a>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
<script>
    var tags = [];

    function updateHiddenInput() {
        const hiddenInput = document.querySelector('input[name="Tags"]');
        hiddenInput.value = JSON.stringify(tags); // Сериализуем массив тегов в строку JSON
        console.log("Обновленный JSON для скрытого поля:", hiddenInput.value); // Лог для дебага

    document.getElementById("addTagButton").addEventListener("click", function () {
        var input = document.createElement("input");
        input.type = "text";
        input.className = "form-control mt-2";
        input.placeholder = "Введите тег";

        // Обработчик события "blur" для добавления тега
        input.addEventListener("blur", function () {
            if (input.value) { // Проверяем, что значение не пустое
                tags.push(input.value); // Добавляем тег в массив
                input.value = ""; // Очищаем поле после добавления
                updateHiddenInput(); // Обновляем скрытое поле
            }
        });

        document.getElementById("tagContainer").appendChild(input);
    });
</script>
}